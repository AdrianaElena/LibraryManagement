@model IEnumerable<LibraryManagement.Models.Patron.PatronDetailModel>

<h3>Patron Index</h3>
<div id="patronIndex">
    <table class="table table-hover" id="patronIndexTable">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Library Card ID</th>
                <th>Overdue Fees</th>
                <th>Home Library Branch</th>
                <th>See Patron Info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patron in Model)
            {
                <tr>
                    <td> @patron.LastName</td>
                    <td> @patron.FirstName</td>
                    <td> @patron.LibraryCardId</td>
                    <td> @patron.OverdueFees</td>
                    <td> @patron.HomeLibraryBranch</td>
                    <td>
                        <a asp-controller="Patron" asp-action="Detail" asp-route-id="@patron.Id">
                            Detail
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


