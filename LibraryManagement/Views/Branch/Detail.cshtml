@model LibraryManagement.Models.Branch.BranchDetailModel


<div class="container">
    <div class="header clearfix">
        <h4 class="text-muted">Branch Information</h4>
    </div>

    <div class="jumbotron">
        <div class="row">
            <img src="@Model.ImageURL" />
        </div>

        <div class="row branchInfo">
            <div class="col-md-8">
                <h2>@Model.Name</h2>

                <div>
                    <div>Address: @Model.Address</div>
                    <div>Telephone: @Model.Telephone</div>
                </div>

                <div id="BranchDescription">
                    <p class="figure-caption">@Model.Description</p>
                </div>

                <div id="branchHours">
                    <ul>
                        @foreach(var day in Model.HoursOpen)
                        {
                            <li>@day</li>
                        }
                    </ul>
                </div>
            </div>

            <div class="col-md-4">
                <table>
                    <tr>
                        <td> Date Opend:</td>
                        <td> @Model.OpenDate</td>
                    </tr>
                    <tr>
                        <td> Number of Patrons</td>
                        <td> @Model.NumberOfPatrons</td>
                    </tr>
                    <tr>
                        <td> Number of Assets</td>
                        <td> @Model.NumberOfAssets</td>
                    </tr>
                    <tr>
                        <td> Value of Assets</td>
                        <td> @Model.TotalAssetValue</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>